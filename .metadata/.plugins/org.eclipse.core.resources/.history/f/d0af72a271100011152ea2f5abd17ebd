package core;

public class P006_Loop {
	public static void main(String[] args) {
		// 1.for loop ->for(initialization;condition;incre/decre){body}
		// ( < , ++) / ( > , --)
		for (int i = 1; i <= 10; i++) {
			System.out.println("for increment = "+i);
		}

		for (int i = 10; i >= 1; i--) {
			System.out.println("for decrement"+i);
		}
		// 2.while loop -> while(condition){body}
		int j = 1;
		while (j <= 10) {
			System.out.println("while increment = "+j);
			j++;
		}

		int k = 10;
		while (k >= 1) {
			System.out.println("while decrement = "+k);
			k--;
		}

		// 3.do while loop -> do {body} while(condition);
		int p = 1;
		do {
			System.out.println("do while increment = "+p);
			p++;
		} while (p <= 10);

		int q = 10;
		do {
			System.out.println("do while decrement = "+q);
			q--;
		} while (q >= 1);
		// 4.for each
	}
}
